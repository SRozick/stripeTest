!!!
-# see helper methods in app/helpers/application_helper.rb
%html(lang="en")
  %head
    %meta{ charset: 'utf-8' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    %link{ rel: 'canonical', href: canonical }
    %title
      =title
    %meta{ content: meta_description, name: 'description' }
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    .off-canvas-wrap{ :'data-offcanvas' => true }
      .inner-wrap
        %nav.tab-bar
          %section.left-small
            %a.left-off-canvas-toggle.menu-icon{ href: '#' }
              %span
          %section.middle.tab-bar-section
            %h2.title
              Inherent Knowledge
        %nav.left-off-canvas-menu
          %ul.off-canvas-list
            %li
              %label
                Inherent Knowledge
            %li
              %a{href: root_path }
                Home
            %li
              %a{href: '#' }
                Get a Quote
            %li
              %a{href: '#' }
                Pricing
            %li
              %a{href: '#' }
                Blog
            %li
              %a{href: '#' }
                Services
            %li
              %a{href: '#' }
                Portfolio
        %section.main-section
        = yield
        .row
          %footer
            .copyright
              = APP_CONFIG['copyright_notice']
            .location
              %span.street
                = APP_CONFIG['contact_address']
              %span.suite
                = APP_CONFIG['contact_suite']
              %p.city
                = APP_CONFIG['contact_city']
              %span.state
                = APP_CONFIG['contact_state']
              %span.postal
                = APP_CONFIG['contact_postal']
              %p.phone
                = APP_CONFIG['contact_phone']
              %p.email
                %a{href: "mailto:#{APP_CONFIG['contact_email_sales']} " }
              %p.webmaster
                %a{href: "mailto:#{APP_CONFIG['contact_email_web']} " }

        %a.exit-off-canvas
    = javascript_include_tag "application"
